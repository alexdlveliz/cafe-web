<h1>Eventos</h1>

<%= link_to "Crear nuevo evento", new_event_path %>

<%# Recorrer cada evento y mostrarlo en pantalla %>
<% @events_items.each do |events_item| %>
    <p><%= events_item.name %></p>
    <%# Mostrar la imagen del evento, a menos que la imagen no exista %>
    <%= image_tag events_item.thumb_image unless events_item.thumb_image.nil? %>
    <p><%= events_item.description %></p>
    <p><%= events_item.date_event %></p>
    <%= link_to "Editar", edit_event_path(events_item.id) %>
<% end %>