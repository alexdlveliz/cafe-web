<%= form_for(@events_item) do |form|%>
  <% if @events_item.errors.any? %>
    <% @events_item.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :date_event %>
        <%= form.date_select :date_event %>
      </div>

      <div class="form-group">
        <%= form.label :date_event %>
        <%= form.time_select :date_event %>
      </div>

      <div class="form-group">
        <%= form.radio_button :status, 'draft' %>
        <%= form.label :status, 'Draft' %>

        <%= form.radio_button :status, 'published' %>
        <%= form.label :status, 'Published' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
        Cargar una imagen principal <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
        Cargar una imagen secundaria <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control', rows: 10 %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= form.submit "Guardar Evento", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
<% end %>
