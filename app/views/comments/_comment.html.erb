<div class="comment-card">
    <div class="card-comment">
        <div class="card-block">
            <div class="row">
                <div class="col-md-2">
                    <%= gravatar_helper comment.user%>
                </div>
                <div class="col-md-10">
                    <div>
                        <%= comment.content %>
                    </div>

                    <div class="comment-attribution">
                        Comentado por <span class="comment-name"><%= comment.user.first_name %></span> hace 
                        <%= distance_of_time_in_words(comment.created_at, Time.now) %> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>