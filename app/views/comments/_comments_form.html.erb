<%# No mostrar el contenido si el usuario es un GuestUser%>
<% unless current_user.is_a? GuestUser %>
    <%= form_for @comment, url: '#' do |f| %>
      <div class="form-group label-content">
        <%= f.label :Contenido %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <%= f.submit 'Postear comentario', class: 'btn btn-primary' %>
    <% end%>
<% end %>