<div class="masthead clearfix">
    <div class="inner">
        <h3 class="masthead-brand">MaybeEnjoy?</h3>
        <nav class="nav nav-masthead">
            <%= link_to "Home", root_path, class: 'nav-link' %>
            <%= link_to "Menú", products_path, class: 'nav-link' %>
            <%= link_to "Eventos", events_path, class: 'nav-link' %>
            <%# Si la persona que inicia sesión es un usuario tipo 'site_admin' 
                puede ver las ventas y las órdenes, de lo contrario no.
            %>
            <% if logged_in?(:site_admin) %>
                <%= link_to "Venta", sells_path, class: 'nav-link' %>
                <%= link_to "Órdenes", orders_path, class: 'nav-link' %>
            <% end %>
            <%= login_helper 'nav-link'%>
        </nav>
    </div>
</div>