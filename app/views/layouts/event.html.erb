<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# meta para poner palabras claves %>
    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'events', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%# div para el menú de navegación %>
    <%= render "shared/nav", location: 'top' %>

    <%# Condición para mostrar el login o el logout %>
    <%= login_helper %>
    
    <%# Permite conectar con cualquier otro archivo html%>
    <%= yield %>

    <%# Partial para mostrar el copyright %>
    <%= copyright_generator %>
  </body>
</html>
