<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# meta para poner palabras claves %>
    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'orders', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%# div para el menú de navegación %>
    <div>
      <div><%= link_to "Home", root_path %></div>
      <div><%= link_to "Menú", products_path %></div>
      <div><%= link_to "Eventos", events_path %></div>
    </div>

    <%# Condición para mostrar el login o el logout %>
    <% if current_user.is_a?(User) %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Register", new_user_registration_path %>
      <%= link_to "Log in", new_user_session_path %>
    <% end %>
    
    <%# Permite conectar con cualquier otro archivo html%>
    <%= yield %>
  </body>
</html>
