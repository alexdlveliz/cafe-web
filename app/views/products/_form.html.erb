<div class="card">
  <div class="card-body">
    <%= form_with(model: product, local: true) do |form| %>
      <% if product.errors.any? %>
        <% product.errors.full_messages.each do |error| %>
          <%= alert_generator error %>
        <% end %>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.text_field :name, class: 'form-control', placeholder: 'Nombre' %>
          </div>

          <div class="form-group">
            <%= form.text_field :price, class: 'form-control', placeholder: 'Precio' %>
          </div>

          <div class="form-group">
            <label class="btn btn-primary">
            Cargar una imagen para el producto<%= form.file_field :imgProduct, style: 'display:none;' %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= form.text_area :description, class: 'form-control', rows: 10, placeholder: 'DescripciÃ³n' %>
          </div>
        </div>

        <div class="col-12">
          <div class="form-group">
            <%= form.submit "Guardar Producto", class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>