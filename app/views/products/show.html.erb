<div class="card mb-3" style="max-width: 900px; margin-left: auto; margin-right: auto;">
  <div class="row no-gutters">  
    <div class="col-md-4">
      <%= image_tag product_img((@product.imgProduct), 'imgProduct').to_s, style: "width: 100%;" %>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title">
          <%= @product.name %>
        </h3>
        <p class="card-text">
          <%= @product.description %>
        </p>
        <p class="card-text">
          <%= "Q. " + "#{@product.price}" %>
        </p>

        <%= link_to 'Edit', edit_product_path(@product) if logged_in?(:site_admin) %> |
        <%= link_to 'Back', products_path %>
      </div>
    </div>    
  </div>
</div>

