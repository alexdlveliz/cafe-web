<div class="card mb-3" style="max-width: 900px; margin-left: auto; margin-right: auto;">
  <div class="row no-gutters">  
    <div class="col-md-4">
      <%= image_tag product_img((@product.imgProduct), 'imgProduct').to_s, style: "width: 100%;" %>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title">
          <%= @product.name %>
        </h3>
        <p class="card-text", style="font-size: 20px;">
          <%= @product.description %>
        </p>
        <p class="card-text", style="font-size: 20px;">
          <%= "Q. " + "#{@product.price}" %>
        </p>

        <p  style="font-size: 20px;">
          <%= link_to 'Editar', edit_product_path(@product) if logged_in?(:site_admin) %>
        </p>
      </div>
    </div>
  </div>
</div>
<%= link_to "Ver todos los productos", products_path, class: 'btn btn-primary', style:"font-size: 20px;"%>

