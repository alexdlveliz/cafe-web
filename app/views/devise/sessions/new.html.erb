<%#<h2>Log innn</h2> %>

<%# Form para el log in %>

  <div class="login">
    <%= image_tag "MaybeEnjoy.jpg", id: "background" %>
    <article class="fondo">
      <%= image_tag "log.png" %>
      <h3>Inicio de Sesión</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field textbox">
          <%= fa_icon "user" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Usuario", class: "input-transparent" %>
        </div>

        <div class="field textbox">
          <%= fa_icon "key" %>    
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Contraseña", class: "input-transparent" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field nopass">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "recordarme" %>
          </div>
        <% end %>

        <div class="actions boton">
          <%= f.submit "Log in", class: 'estilos recordarme' %>
        </div>
      <% end %>
    </article>

  </div>