
<%= form_for @sell do |form| %>
  <% if sell.errors.any? %>
    <% sell.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :sell_date %>
    <%= form.date_select :sell_date %>
  </div>

  <%= form.fields_for :products do |product_form| %>
    <div>
      <%= product_form.collection_select(:name, Product.all,  :id, :name,  
                                        { 
                                          :prompt => "Seleccione uno"
                                        }
                                        ) 
      %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
